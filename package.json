{
    "name": "Linemate",
    "version": "1.0.0",
    "description": "API Solution for the Linemate Portal",
    "author": "",
    "license": "ISC",
    "scripts": {
        "start": "node --import @bleed-believer/path-alias dist/server.js",
        "build:tsc": "tsc && tsc-alias",
        "dev": "cross-env NODE_ENV=development nodemon --config src/config/dev/nodemon.json"
    },
    "prettier": "src/config/lint/.prettierrc.json",
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "prettier",
            "plugin:@typescript-eslint/recommended",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {
            "@typescript-eslint/explicit-member-accessibility": 0,
            "@typescript-eslint/explicit-function-return-type": 0,
            "@typescript-eslint/no-parameter-properties": 0,
            "@typescript-eslint/interface-name-prefix": 0,
            "@typescript-eslint/explicit-module-boundary-types": 0,
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/ban-types": "off",
            "@typescript-eslint/no-var-requires": "off",
            "prettier/prettier": [
                "error",
                {
                    "endOfLine": "auto"
                }
            ]
        }
    },
    "dependencies": {
        "axios": "^1.6.8",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "date-fns": "^2.28.0",
        "dotenv": "^10.0.0",
        "envalid": "^7.1.0",
        "exceljs": "^4.4.0",
        "express": "^4.17.1",
        "fs": "^0.0.1-security",
        "helmet": "^4.6.0",
        "hpp": "^0.2.3",
        "jsonwebtoken": "^9.0.2",
        "liquibase": "^4.4.0",
        "moment": "^2.30.1",
        "morgan": "^1.10.0",
        "nodemailer": "^6.7.5",
        "pg": "^8.7.3",
        "redis": "^4.6.12",
        "sequelize": "^6.6.5",
        "swagger-jsdoc": "^6.0.0",
        "swagger-ui-express": "^4.1.6",
        "ts-node-dev": "^2.0.0",
        "uuid": "^9.0.0",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.5",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@bleed-believer/path-alias": "^0.15.2",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.1",
        "@types/cors": "^2.8.11",
        "@types/express": "^4.17.13",
        "@types/hpp": "^0.2.1",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.0.1",
        "@types/sequelize": "^4.28.10",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^7.0.1",
        "lint-staged": "^11.0.0",
        "node-gyp": "^8.1.0",
        "nodemon": "^2.0.9",
        "prettier": "^2.3.2",
        "sequelize-cli": "^6.2.0",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.4.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.4"
    }
}
